<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <Authors>Raphael Lorenzeto de Abreu</Authors>
    <RootNamespace>SimpleConcepts.Extensions</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Description>Simple extensions to allow less verbose conversions of System.Guid to/from other types. Used to simplify projects that use numeric ids and need to upgraded to use UUID based ids or projects that work as an interface between the two forms of entry identification.</Description>
    <RepositoryUrl>https://github.com/raphaabreu/SimpleConcepts.Extensions.Guid</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageProjectUrl>https://github.com/raphaabreu/SimpleConcepts.Extensions.Guid</PackageProjectUrl>
    <PackageTags>simple concepts simpleconcepts guid numeric conversion extensions</PackageTags>
    <Copyright>MIT</Copyright>
    <Version>1.0.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
